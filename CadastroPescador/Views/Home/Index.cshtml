@model CadastroPescador.Models.UsuarioExternoModel
@using CadastroPescador.Enums
@using Microsoft.Extensions.Options
@inject IOptions<CadastroPescador.GoogleReCAPTCHA.ReCAPTCHASettings> GoogleRecap

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h3 class="text-center">Cadastro de Usuário</h3>

<hr />
<div class="col-12">
    <input type="hidden" id="api" value="@ViewBag.Api" />
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Token" type="hidden" />
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="GrupoTrabalho" class="control-label"></label>
                    <select class="form-control" asp-for="GrupoTrabalho" asp-items="@(new SelectList(ViewBag.GrupoLista, "Value","Text"))"></select>
                    <span asp-validation-for="GrupoTrabalho" class="text-danger" />
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Formulario" class="control-label"></label>
                    <select class="form-control" asp-for="Formulario" asp-items="@(new SelectList(ViewBag.Formulario, "Value","Text"))"></select>
                    <span asp-validation-for="Formulario" class="text-danger" />
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label" id="identificacao"></label>
                    <input asp-for="Nome" placeholder="Nome" class="form-control letras" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" placeholder="E-mail" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Contato" class="control-label"></label>
                    <input asp-for="Contato" required placeholder="Celular" class="form-control" />
                    <span asp-validation-for="Contato" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="TipoPessoa" class="control-label"></label>
                    <select class="form-control" asp-for="TipoPessoa" asp-items="@(new SelectList(ViewBag.TipoPessaoLista, "Value","Text"))"></select>
                    <span asp-validation-for="TipoPessoa" class="text-danger" />
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="EmContrucao" class="control-label"></label>
                    <select class="form-control" asp-for="EmContrucao" asp-items="@(new SelectList(ViewBag.EmConstrucaoLista, "Value","Text"))"></select>
                    <span asp-validation-for="EmContrucao" class="text-danger" />
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" placeholder="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </div>            
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="CNPJ" class="control-label"></label>
                    <input asp-for="CNPJ" placeholder="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="RazaoSocial" class="control-label"></label>
                    <input asp-for="RazaoSocial" placeholder="Razão Social" class="form-control" />
                    <span asp-validation-for="RazaoSocial" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Lotacao" class="control-label"></label>
                    <input asp-for="Lotacao" placeholder="Lotação" class="form-control" />
                    <span asp-validation-for="Lotacao" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Matricula" class="control-label"></label>
                    <input asp-for="Matricula" placeholder="Matrícula" class="form-control" />
                    <span asp-validation-for="Matricula" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="NomeEmbarcacao" class="control-label"></label>
                    <input asp-for="NomeEmbarcacao" placeholder="Nome da Embarcação" class="form-control" />
                    <span asp-validation-for="NomeEmbarcacao" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="NumeroRGP" class="control-label"></label>
                    <input asp-for="NumeroRGP" placeholder="Número do RGP" class="form-control" />
                    <span asp-validation-for="NumeroRGP" class="text-danger"></span>
                </div>
            </div>


            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="TIE" class="control-label"></label>
                    <input asp-for="TIE" placeholder="TIE" class="form-control" />
                    <span asp-validation-for="TIE" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="NumeroSif" class="control-label"></label>
                    <input asp-for="NumeroSif" placeholder="Número SIF" class="form-control" />
                    <span asp-validation-for="NumeroSif" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-12 col-md-8">
                <div class="form-group">
                    <label asp-for="NomeEndereco" id="nomeEndereco" class="control-label"></label>
                    <input asp-for="NomeEndereco" placeholder="Nome do Endereço" class="form-control" />
                    <span asp-validation-for="NomeEndereco" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="CEP" class="control-label"></label>
                    <input asp-for="CEP" placeholder="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"></label>
                    <input asp-for="Endereco" placeholder="Endereço" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="NumeroEndereco" class="control-label"></label>
                    <input asp-for="NumeroEndereco" placeholder="Nº do Endereço" class="form-control" />
                    <span asp-validation-for="NumeroEndereco" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" placeholder="Bairro" class="form-control" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" placeholder="Nome da Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" placeholder="Sigla do Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" placeholder="Complemento do Endereço" class="form-control" />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-12 form-group text-center">
                <input type="submit" id="salvar" value="Salvar" class="btn btn-lg btn-primary pl-4 pr-4" />
                <div id="notifiqueCNPJ" class="alert alert-warning" role="alert">
                </div>
                <div id="notifiqueCPF" class="alert alert-warning" role="alert">
                </div>
                <div id="notifiqueEmail" class="alert alert-warning" role="alert">
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://www.google.com/recaptcha/api.js?render=@GoogleRecap.Value.ReCAPTCHA_Site_Key"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('@GoogleRecap.Value.ReCAPTCHA_Site_Key', { action: 'homepage' }).then(function (token) {
                $("#Token").val(token);
          });
      });
    </script>
}
